<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EasySplit</title>
    <link rel="stylesheet" href="../Assets/CSS/mainHome.css">
</head>

<body>
    <!-- =============== Navigation ================ -->
    <div class="container">
        <div class="navigation">
            <ul>
                <li>
                    <a href="/home">
                        <span class="icon">
                            <ion-icon name="logo-usd"></ion-icon>
                        </span>
                        <span class="title">EasySplit</span>
                    </a>
                </li>

                <li>
                    <a href="/home">
                        <span class="icon">
                            <ion-icon name="home-outline"></ion-icon>
                        </span>
                        <span class="title">Home</span>
                    </a>
                </li>

                <li>
                    <a href="/dashboard">
                        <span class="icon">
                            <ion-icon name="people-outline"></ion-icon>
                        </span>
                        <span class="title">Dashboard</span>
                    </a>
                </li>

                <li>
                    <a href="/about">
                        <span class="icon">
                            <ion-icon name="information-circle-outline"></ion-icon>
                        </span>
                        <span class="title">About</span>
                    </a>
                </li>

                <li>
                    <a href="/contact">
                        <span class="icon">
                            <ion-icon name="help-outline"></ion-icon>
                                                </span>
                        <span class="title">Contact Us</span>
                    </a>
                </li>

                <li>
                    <a href="/login">
                        <span class="icon">
                            <ion-icon name="log-in-outline"></ion-icon>
                        </span>
                        <span class="title">Login</span>
                    </a>
                </li>

                <li>
                    <a href="/feedback">
                        <span class="icon">
                            <ion-icon name="chatbubbles"></ion-icon>
                        </span>
                        <span class="title">Feedback</span>
                    </a>
                </li>



            </ul>
        </div>

        <!-- ========================= Main ==================== -->
        <div class="main">
            <div class="topbar">
                <div class="toggle">
                    <ion-icon name="menu-outline"></ion-icon>
                </div>
                <% data2.forEach(function(data2){ %>
                <div class="user">
                    <img src="/Img/<%= data2.profile%> "  alt="">
                </div>
                <% }); %>

            </div>

            <!-- ======================= Cards ================== -->
            <div class="cardBox">
               <div class="feature">
                <div class="card">
                    <a href="/addexpense"></a>
                    <div>
                        <div class="numbers">Add an expense</div>
                        
                    </div>

                  
                </div>
            </div>

            <div class="feature">
                <div class="card">
                    <a href="/settleup"></a>
                    <div>
                        <div class="numbers">Settle Up</div>
                    </div>

                   
                </div>
            </div>

            <div class="feature">
                <div class="card">
                    <a href="/addfriend"></a>
                    <div>
                        <div class="numbers">Add Friend</div>
                    </div>

                   
                </div>
            </div>
        </div>
            <!-- ================ Khata Details List ================= -->
            <div class="details">
                <div class="recentOrders">
                    <div class="cardHeader">
                        <h2>Expenses</h2>
                        <a href="/allkhata" class="btn">View All</a>
                    </div>

                    <table>
                        <thead>
                            <tr>
                                <td>Name</td>
                                <td>Price</td>
                                <td>Status</td>
                            </tr>
                        </thead>

                        <tbody>
                            <% item.forEach(function(item){ %>

                            <tr>
                                <td><%= item.name %></td>
                                <td><%= item.amount %></td>
                                <td><%=item.status%></td>
                                <!-- <td><span class="status delivered">Delivered</span></td> -->
                            </tr>
                        </tbody>

                            <% }); %>

                          
                        </tbody>
                    </table>
                </div>

                <!-- ================= New Customers ================ -->
                <div class="recentCustomers">
                    <div class="cardHeader">
                        <h2>Friends</h2>
                    </div>
                    <% data.forEach(function(data){ %>

                    <table>
                        <tr>
                            <td width="60px">
                                <div class="imgBx"><img src="/Img/<%= data.image%> " alt=""></div>
                            </td>
                            <td>
                                <h4><%= data.name%> <br> <span><%= data.city%></span></h4>
                            </td>
                        </tr>
                        <% }); %>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="../Assets/JS/mainHome.js"></script>

    <!-- ====== ionicons ======= -->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>

</html>